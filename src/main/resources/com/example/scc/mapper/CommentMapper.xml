<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.scc.mapper.CommentMapper">

    <select id="commentCount" resultType="int">
        SELECT COUNT(*)
        FROM comment
    </select>

    <select id="commentList" resultType="Comment">
        SELECT cno, bno, content, writer, regdate
        FROM comment
        WHERE bno = #{bno}
        order by regdate desc;
    </select>

    <insert id="commentInsert" parameterType="Comment">
        INSERT INTO comment
        (
        cno,
        bno,
        content,
        writer,
        regdate
        )
        VALUES
        (
        #{cno},
        #{bno},
        #{content},
        #{writer},
        now()
        )
    </insert>

    <update id="commentUpdate" parameterType="Comment">
        UPDATE comment
        SET content = #{content},
        regdate = now()
        WHERE cno = #{cno}
    </update>

    <delete id="commentDelete" parameterType="int">
        DELETE
        FROM comment
        WHERE cno = #{cno}
    </delete>

    <select id="countReply" resultType="int">
        select count(*)
        from comment
        where bno = #{bno}
    </select>

</mapper>